<div class="row calendar">
    <div class="col s12">
			<% if(@events.blank?) %>
				<span>Aucun événement pour le moment</span>
			<% else %>
				<% @events.each do |event| %>

					<div class="card">
						<div class="card-content">
							<span class="card-title"><%= l event.date, format: :calendar %></span>
								<p>
									<%= event.event%>
								</p>
						</div>
					</div>

				<% end %>
			<% end %>


    </div>
</div>
