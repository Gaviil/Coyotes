<div class="row card-panel">
	<div class="col s12">
		<%= form_for(@event, url: admin_event_path(@event.id), html: { method: :put }, id: 'edit_event_{@event.id}') do |f| %>

			<% @event.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

      <div class="field input-field">
				<%= f.label :event, "Evenement" %>
				<%= f.text_field :event, :class => "event" %>
			</div>

      <div class="field input-field">
        <%= f.date_field :date %>
      </div>

      <div class="actions btnlog right">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Valider <i class='material-icons right'>done</i>
				<% end %>
			</div>
      <%= link_to 'Retour', admin_events_path, :class => "waves-effect waves-light btn red" %>
		<% end %>
	</div>
</div>
