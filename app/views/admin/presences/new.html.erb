<div class="row">
	<div class="col s12">
		<%= form_for(@presence, url: admin_presences_path, html: { method: :post }, id: 'new_match') do |f| %>

			<% @presence.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field input-field">
			    <%= f.select(:tournaments_id) do %>
			        <% @tournaments.each do |tournament| %>
			            <% [[tournament.date, tournament.id]].each do |c| -%>
			                <%= content_tag(:option, c.first, value: c.last) %>
			            <% end %>
			        <% end %>
			    <% end %>
			</div>
			<div class="field input-field">
			    <%= f.select(:name) do %>
			        <% @players.each do |player| %>
						<% if(player.lastname.present? && player.firstname.present?) %>
				            <% [[player.lastname+" "+player.firstname, player.lastname+" "+player.firstname]].each do |c| -%>
				                <%= content_tag(:option, c.first, value: c.last) %>
				            <% end %>
						<% end %>
			        <% end %>
			    <% end %>
			</div>

			<div class="btnlog actions">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Valider <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>

		<%= link_to 'Retour', admin_presences_path %>
	</div>
</div>
