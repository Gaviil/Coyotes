<div class="row">
	<div class="col s12">
		<%= form_for(@presence, url: admin_presences_path, html: { method: :post }, id: 'new_match') do |f| %>

			<% @presence.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field input-field">
				<%= f.label :tournaments_id, "Id du tournois" %>
				<%= f.text_field :tournaments_id, :class => "validate" %>
			</div>
            <div class="field input-field">
				<%= f.label :name, "Nom du joueur" %>
				<%= f.text_field :name, :class => "validate" %>
			</div>


			<div class="btnlog actions">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Publier <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>

		<%= link_to 'Retour', admin_presences_path %>
	</div>
</div>
