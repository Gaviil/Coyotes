<div class="row card-panel">
	<div class="col s12">
      <%= link_to new_admin_presence_path, :class => "right btn-add btn-floating btn-large waves-effect waves-light blue" do %>
  			<i class="material-icons small">add</i>
  		<% end %>
		<table class="striped">
			<thead>
				<tr>
					<th data-field="email">Id tournois</th>
                    <th data-field="admin">Nom du joueur pr√©sent</th>
					<th  class="right" data-field="price">Action</th>
				</tr>
			</thead>
			<tbody>
				<% @presences.each do |presence| %>
					<tr>
						<td><%= presence.tournaments_id %></td>
						<td><%= presence.name %></td>
						<td class="right">
              <%= link_to admin_presence_path(presence.id), :class => "waves-effect waves-light btn red", :method => :delete,  :data => {:confirm => 'Tu est sur ?' } do %>
                  <i class="material-icons small">delete</i>
              <% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="col s12 center-align">
        <%= will_paginate @presences %>
    </div>
	</div>
</div>
