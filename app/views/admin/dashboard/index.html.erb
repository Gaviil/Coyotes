<script>

var ctx = document.getElementById('age_charts').getContext('2d');
var ctx2 = document.getElementById('place_player').getContext('2d');

var chart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        labels: ["Jeunes", "Adultes"],
        datasets: [{
            backgroundColor: [
                '#FE5457',
                '#55A1E8'
            ],
            borderColor: [
                '#FE5457',
                '#55A1E8'
            ],
            data: <%= @data_players %>,
        }]
