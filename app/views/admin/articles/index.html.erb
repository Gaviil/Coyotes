<div class="row card-panel">
	<div class="col s12">
      <%= link_to new_admin_article_path, :class => "right btn-add btn-floating btn-large waves-effect waves-light blue" do %>
  			<i class="material-icons">add</i>
  		<% end %>
  		<table class="striped">
  			<thead>
  				<tr>
  					<th data-field="name">Titre</th>
  					<th data-field="category">Category</th>
  					<th class="right"></th>
  				</tr>
  			</thead>
  			<tbody>
  				<% @news.each do |new| %>
  					<tr>
  						<td><%= new.title %></td>
							<% if(new.category == "article")%>
								<td class='hide-on-small-only'><span class="mybadge green"><%= new.category %></span></td>
							<% else %>
								<td class='hide-on-small-only'><span class="mybadge blue"><%= new.category %></span></td>
							<% end %>
							<td class="right">
							  <a class="dropdown-button" href="#" data-activates="dropdown<%= new.id%>">
							<i class="material-icons">more_vert</i>
							</a>

							  <!-- Dropdown Structure -->
							  <ul id="dropdown<%= new.id%>" class="dropdown-content">
							    <li><%= link_to edit_admin_article_path(id: new.id), :class => "drop_edit" do %>Editer<% end %></li>
									<li><%= link_to admin_article_path(new.id), :method => :delete, :class => "drop_remove",  :data => {:confirm => 'Tu est sur ?' } do %>Supprimer<% end %></li>
							  </ul>
							</td>

  					</tr>
  				<% end %>
  			</tbody>
  		</table>
			<div class="center-align">
	        <%= will_paginate @news %>
	    </div>
	</div>
</div>
