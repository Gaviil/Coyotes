<div class="row">
	<div class="col s12">
		<%= link_to new_admin_player_path, :class => "waves-effect waves-light btn right blue darken-1" do %>
			<i class="material-icons small">add</i>
		<% end %>
	</div>
	<div class="col s12">
		<table class="striped">
			<thead>
				<tr>
					<th data-field="lastname">Nom</th>
                    <th data-field="firstname">Prénom</th>
                    <th class="hide-on-med-and-down" data-field="number">Numéro</th>
                    <th class="hide-on-med-and-down" data-field="place">Rôle</th>
					<th class="hide-on-med-and-down" data-field="place">Photo</th>
                    <th class="hide-on-med-and-down" data-field="staff">Bureau</th>
                    <th data-field="adult">Adulte</th>

					<th  class="right" data-field="price">Action</th>
				</tr>
			</thead>
			<tbody>
				<% @players.each do |player| %>
					<tr>
                        <td><%= player.lastname %></td>
                        <td><%= player.firstname %></td>
                        <td class="hide-on-med-and-down" ><%= player.number %></td>
                        <td class="hide-on-med-and-down" ><%= player.place %></td>
						<td class="hide-on-med-and-down" ><%= player.picture %></td>
                        <td class="hide-on-med-and-down" ><%= player.staff %></td>
                        <td><%= player.adult %></td>

						<td class="right">
                            <%= link_to admin_player_path(player.id), :class => "waves-effect waves-light btn red darken-3", :method => :delete,  :data => {:confirm => 'Tu est sur ???  ☜(ˆ▽ˆ)' } do %>
								<i class="material-icons small">delete</i>
				        	<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
