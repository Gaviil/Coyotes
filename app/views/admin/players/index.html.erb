<div class="row">
	<div class="col s12">
		<table class="striped">
			<thead>
				<tr>
					<th data-field="id">Id</th>
					<th data-field="lastname">Nom de famille</th>
                    <th data-field="firstname">Prénom</th>
                    <th data-field="number">Numéro</th>
                    <th data-field="place">Rôle</th>
                    <th data-field="staff">Bureau</th>
                    <th data-field="adult">Adulte</th>

					<th  class="right" data-field="price">Action</th>
				</tr>
			</thead>
			<tbody>
				<% @players.each do |player| %>
					<tr>
						<td><%= player.id %></td>
                        <td><%= player.lastname %></td>
                        <td><%= player.firstname %></td>
                        <td><%= player.number %></td>
                        <td><%= player.place %></td>
                        <td><%= player.staff %></td>
                        <td><%= player.adult %></td>

						<td class="right">
                            <%= link_to admin_player_path(player.id), :class => "waves-effect waves-light btn red darken-3", :method => :delete,  :data => {:confirm => 'Tu est sur ???  ☜(ﾟヮﾟ☜)' } do %>
								<i class="material-icons small">delete</i>
				        	<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
