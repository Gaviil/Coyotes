		<script>
			tinymce.init({
			  selector: 'textarea#newContent',
			  height: 200,
			  menubar: true,
			  plugins: [
			    'advlist autolink lists link image charmap print preview anchor',
			    'searchreplace visualblocks code fullscreen',
			    'insertdatetime media table contextmenu paste code'
			  ],
			  toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
			  content_css: [
			    '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
			    '//www.tinymce.com/css/codepen.min.css']
			});

		</script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js">


			$(document).ready(function () {
				$('select').material_select();
			});
		</script>
	</head>
	<body class="admin">
		<header>
			<nav class="top-nav">
				<div class="container">
					<a href="#" data-activates="nav-mobile" class="button-collapse top-nav full hide-on-large-only">
						<i class="material-icons">menu</i>
					</a>
					<div class="nav-wrapper">
						<a class="page-title"><%= controller_name.capitalize %></a>

            <%= link_to root_path, { :class => "right"} do %>
  					     <i class='material-icons'>power_settings_new</i>
  					<% end %>
					</div>
				</div>
			</nav>

			<div class="container"></div>

			<ul id="nav-mobile" class="side-nav fixed collapsible" style="left: 0px;">
				<li class="bold">
					<%= link_to 'Dashboard', admin_path %>
				</li>
				<li class="bold">
					<%= link_to 'Articles', admin_articles_path %>
				</li>
				<li class="bold">
					<%= link_to 'Utilisateurs', admin_users_path %>
				</li>
        <li class="bold no-padding">
          <ul class="collapsible collapsible-accordion">
            <li>
              <a class="collapsible-header">Club<i class="right material-icons">arrow_drop_down</i></a>
              <div class="collapsible-body">
                <ul>
                  <li><%= link_to 'Tournois', admin_tournaments_path %></li>
                  <li><%= link_to 'Matchs', admin_matches_path %></li>
                  <li><%= link_to 'Ã‰quipes', admin_teams_path %></li>
                  <li><%= link_to 'Joueurs', admin_players_path %></li>
                  <li><%= link_to 'Presences', admin_presences_path %></li>
                  <li><%= link_to 'Evenements', admin_events_path %></li>
                </ul>
              </div>
            </li>
          </ul>
        </li>
        <li class="bold">
          <%= link_to 'Feature / Bug', admin_features_path %>
        </li>
        <li class="bold">
          <a href="https://coyotes-gray-dev.herokuapp.com">Serveur de test <i style="vertical-align:middle; margin-left: 10px;" class=" material-icons">vpn_key</i></a>
        </li>
			</ul>
		</header>
		<main>
			<div class="container">
				<% if notice %>
				<script type="text/javascript">
					$(document).ready(function () {
						Materialize.toast('<%= notice %>', 1000);
					});
				</script>
				<% end %>
				<% if alert %>
				<script type="text/javascript">
					$(document).ready(function () {
						Materialize.toast('<%= alert %>', 1000);
					});
				</script>
				<% end %>

				<%= yield %>
				<div class="col s12">
					<p class="version grey-text text-darken-1 right-align">
						v1.01
					</p>
				</div>
			</div>
		</main>
	</body>
</html>